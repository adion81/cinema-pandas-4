@model Movie
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <div class="card">
            <div class="card-header bg-danger text-white">@Model.Title</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-8">
                        <p>Genre: @Model.Genre</p>
                        <p>Release Year: @Model.Year</p>
                        <p>Organized by: @Model.Organizer.Name</p>
                        <p>About: @Model.Description</p>
                    </div>
                    <div class="col-sm-4">
                        <ul class="list-group">
                            <li class="list-group-item bg-dark text-white">Guests: </li>
                            @foreach( var w in Model.Guests)
                            {
                                <li class="list-group-item">@w.MovieGoer.Name</li>
                            }
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>